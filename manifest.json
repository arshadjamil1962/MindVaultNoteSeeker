{
  "manifest_version": 3,
  "name": "MindVaultNoteSeeker",
  "version": "1.0",
  "description": "A place to securely store and organize your knowledge, thoughts and resources.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "notifications",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/diary.png",
      "48": "icons/diary.png",
      "128": "icons/diary.png"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "icons/diary.png",
    "48": "icons/diary.png",
    "128": "icons/diary.png"
  }
}